{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@Types/*": ["./src/@types/*"],
      "@Api/*": ["./src/api/*"],
      "@Assets/*": ["./src/assets/*"],
      "@Components/*": ["./src/components/*"],
      "@Hooks/*": ["./src/hooks/*"],
      "@Layout/*": ["./src/layout/*"],
      "@pages/*": ["./src/pages/*"],
      "@Routes/*": ["./src/routes/*"],
      "@Stores/*": ["./src/stores/*"],
      "@Style/*": ["./src/style/*"],
      "@Utils/*": ["./src/utils/*"],
    }
  },
  "include": ["src"],
  "typeRoots": ["./@types", "./node_modules/@types"]
}

